{
  "version": 2,
  "builds": [
    { "src": "package.json",      "use": "@vercel/next" },
    { "src": "python_api/**/*.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/chat$",      "dest": "/python_api/main.py" },
    { "src": "/api/embedding$", "dest": "/python_api/main.py" },
    { "src": "/api/(.*)",       "dest": "/app/api/$1" },
    { "src": "/(.*)",           "dest": "/" }
  ]
}
